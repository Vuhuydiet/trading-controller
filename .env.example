PROJECT_NAME=Crypto Trading Platform
SECRET_KEY=
DATABASE_URL=sqlite:///./trading.db
ACCESS_TOKEN_EXPIRE_MINUTES=4320  # 3 ng√†y (60 * 24 * 3)
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Model Configuration
# Sentiment Analysis: finbert | openai | ensemble
AI_SENTIMENT_MODEL=finbert
# Reasoning Provider: ollama | openai | gemini
AI_REASONING_PROVIDER=ollama
# Reasoning Model: llama3.2 | gpt-4 | gemini-pro
AI_REASONING_MODEL=llama3.2

# AI API Keys (only needed for cloud providers)
# OpenAI API Key (for sentiment/reasoning with OpenAI models)
OPENAI_API_KEY=
# Google Gemini API Key (for reasoning with Gemini models)
GEMINI_API_KEY=
# Ollama does not require API key (runs locally)

# Binance API Configuration
BINANCE_API_BASE_URL=https://api.binance.com
BINANCE_WS_BASE_URL=wss://stream.binance.com:9443
BINANCE_API_KEY=
BINANCE_API_SECRET=

# MongoDB Configuration (for other modules)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=trading_controller

# Kafka Configuration for News Module
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_NEWS_ARTICLES_TOPIC=news.articles
KAFKA_NEWS_INSIGHTS_TOPIC=news.insights

# LLM Configuration for News Parsing
# Options: ollama, openai, anthropic
LLM_PROVIDER=ollama
LLM_MODEL=llama2
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# News Crawler Configuration
NEWS_CRAWL_INTERVAL_MINUTES=60
NEWS_SOURCES=["coindesk", "reuters", "bloomberg", "twitter"]

# Twitter API Configuration (optional)
TWITTER_BEARER_TOKEN=
TWITTER_API_KEY=
TWITTER_API_SECRET=

# Development
DEBUG=True